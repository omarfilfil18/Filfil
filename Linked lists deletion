#include <stdio.h>
#include <stdlib.h>

//Here is how we define a "node" an element in a linked list
typedef struct node
{
    char word[LENGTH + 1];
    struct node *next;
}
node;

//this function mainly depends on recursion
void free_llist(node *n)
{
    if(n == NULL)
      {
          return;
      }

      if(n->next == NULL)
      {
          free(n);
      }
      else
      {
          free_llist(n->next);
          free(n);
      }
}    
